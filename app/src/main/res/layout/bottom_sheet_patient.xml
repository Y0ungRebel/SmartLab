<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="385dp"
    android:background="@drawable/bottom_sheet_background">

    <TextView
        android:id="@+id/bs_date"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:textSize="22dp"
        android:text="Выбор пациента" />

    <ImageButton
        android:id="@+id/close_date"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="27dp"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:layout_toRightOf="@+id/bs_date"
        android:src="@drawable/close_dialog"
        android:background="@color/clear_white"/>

    <Button
        android:id="@+id/btn_patient_first"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:drawableStart="@drawable/female"
        android:background="@drawable/btn_category_not_pressed"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:textSize="18dp"
        android:gravity="left|center"
        android:paddingLeft="10dp"
        android:text="  Тицкая Елена" />

    <Button
        android:id="@+id/btn_patient_second"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:drawableStart="@drawable/male"
        android:background="@drawable/btn_category_not_pressed"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_patient_first"
        android:layout_marginTop="17dp"
        android:textSize="18dp"
        android:gravity="left|center"
        android:paddingLeft="10dp"
        android:text="  Петров Пётр" />

    <Button
        android:id="@+id/button_add_patient"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:background="@drawable/btn_delete"
        android:text="Добавить пациента"
        android:layout_below="@id/btn_patient_second"
        android:layout_marginTop="25dp"
        android:textSize="15dp"
        android:textColor="@color/buttonLogInActive"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_save_patient"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/button_add_patient"
        android:background="@drawable/btn_next_reg"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:text="Подтвердить"/>

</RelativeLayout>