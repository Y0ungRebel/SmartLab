<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentAnalyzes">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:iconifiedByDefault="false"
        app:queryHint="Искать анализы"
        android:layout_marginTop="20dp"
        android:focusable="false"
        app:searchIcon="@drawable/find"
        app:queryBackground="@null"
        android:background="@drawable/edit_email"/>

    <TextView
        android:id="@+id/tvNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textSize="18sp"
        android:textColor="@color/colorTextSecondary"
        android:layout_marginHorizontal="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/searchView"
        android:text="Акции и новости" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bannersRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNews"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/card_banners" />

    <TextView
        android:id="@+id/tvCatalog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bannersRecyclerView"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="18dp"
        android:textColor="@color/colorTextSecondary"
        android:textStyle="bold"
        android:text="Каталог анализов"
        android:textSize="18sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categoriesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCatalog"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        android:scrollbars="none"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/card_categories"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/analyzesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/categoriesRecyclerView"
        android:scrollbars="none"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/card_analyze" />

    <RelativeLayout
        android:id="@+id/cart_field"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <View
            android:id="@+id/cart_view"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:backgroundTint="@color/white"
            android:background="@color/black" />

        <Button
            android:id="@+id/btn_cart"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:background="@drawable/button_add_item"
            android:drawableStart="@drawable/cart"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="220dp"
            android:text="В корзину"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/cart_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/btn_cart"
            android:layout_alignTop="@id/btn_cart"
            android:layout_alignRight="@id/btn_cart"
            android:layout_marginRight="10dp"
            android:elevation="10dp"
            android:textAllCaps="false"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="price" />


    </RelativeLayout>

</RelativeLayout>