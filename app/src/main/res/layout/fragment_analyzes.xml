<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentAnalyzes">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:iconifiedByDefault="false"
        app:queryHint="Искать анализы"
        android:layout_marginTop="20dp"
        android:focusable="false"
        app:searchIcon="@drawable/find"
        app:queryBackground="@null"
        android:background="@drawable/edit_email"/>

    <TextView
        android:id="@+id/tvNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textSize="18sp"
        android:textColor="@color/colorTextSecondary"
        android:layout_marginHorizontal="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/searchView"
        android:text="Акции и новости" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bannersRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNews"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/card_banners" />

    <TextView
        android:id="@+id/tvCatalog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bannersRecyclerView"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="18dp"
        android:textColor="@color/colorTextSecondary"
        android:textStyle="bold"
        android:text="Каталог анализов"
        android:textSize="18sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categoryRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCatalog"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        android:scrollbars="none"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/card_categories"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/analyzesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/categoryRecyclerView"
        android:layout_marginTop="8dp"
        android:scrollbars="none"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/card_analyze" />

</RelativeLayout>