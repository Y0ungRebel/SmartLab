<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnterAndRegistration">

    <ImageView
        android:id="@+id/hello"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/hello" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добро пожаловать!"
        android:textColor="#000000"
        android:textSize="28dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/hello"/>

    <TextView
        android:id="@+id/infoText"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:layout_below="@+id/hello"
        android:textSize="15dp"
        android:text="Войдите, чтобы пользоваться функциями приложения" />

    <TextView
        android:id="@+id/infoEmail"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="90dp"
        android:textColor="#7E7E9A"
        android:layout_below="@+id/infoText"
        android:textSize="15dp"
        android:text="Вход по E-mail" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="example@mail.ru"
        android:textSize="14dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/edit_email"
        android:layout_below="@+id/infoEmail"/>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:enabled="false"
        android:background="@drawable/btn_login"
        android:layout_below="@id/editEmail"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        android:onClick="onClick"
        android:textAllCaps="false"
        android:text="Далее"/>

    <TextView
        android:id="@+id/infoEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="630dp"
        android:textColor="#7E7E9A"
        android:textSize="15dp"
        android:text="Или войдите с помощью" />

    <Button
        android:id="@+id/btnLogYandex"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@drawable/edit_email"
        android:layout_below="@+id/infoEnter"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:textSize="14dp"
        android:textAllCaps="false"
        android:text="Войти с Яндекс" />
</RelativeLayout>