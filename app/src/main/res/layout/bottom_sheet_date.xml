<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="465dp"
    android:background="@drawable/bottom_sheet_background">

    <TextView
        android:id="@+id/bs_date"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:textSize="22dp"
        android:text="Дата и время" />

    <ImageButton
        android:id="@+id/close_date"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="27dp"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:layout_toRightOf="@+id/bs_date"
        android:src="@drawable/close_dialog"
        android:background="@color/clear_white"/>

    <TextView
        android:id="@+id/bs_take"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bs_date"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:textSize="17dp"
        android:text="Выберите дату" />

    <Spinner
        android:id="@+id/date"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="top"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/bs_take"
        android:background="@drawable/spinner_unfocus"
        android:ems="10"
        android:entries="@array/dates"
        android:spinnerMode="dropdown"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/bs_ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="25dp"
        android:textSize="17dp"
        android:text="Выберите время" />

    <Button
        android:id="@+id/first_time"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/btn_category_not_pressed"
        android:layout_below="@+id/bs_ticket"
        android:hint="10:00"
        android:textColor="@color/colorTextPrimary"
        android:textSize="17dp" />

    <Button
        android:id="@+id/second_time"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="115dp"
        android:background="@drawable/btn_category_not_pressed"
        android:layout_below="@+id/bs_ticket"
        android:hint="13:00"
        android:textColor="@color/colorTextPrimary"
        android:textSize="17dp" />

    <Button
        android:id="@+id/third_time"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="205dp"
        android:background="@drawable/btn_category_not_pressed"
        android:layout_below="@+id/bs_ticket"
        android:hint="14:00"
        android:textColor="@color/colorTextPrimary"
        android:textSize="17dp" />

    <Button
        android:id="@+id/fourth_time"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="295dp"
        android:background="@drawable/btn_category_not_pressed"
        android:layout_below="@+id/bs_ticket"
        android:hint="15:00"
        android:textColor="@color/colorTextPrimary"
        android:textSize="17dp" />

    <Button
        android:id="@+id/fifth_time"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/btn_category_not_pressed"
        android:layout_below="@+id/first_time"
        android:hint="16:00"
        android:textColor="@color/colorTextPrimary"
        android:textSize="17dp" />

    <Button
        android:id="@+id/sixth_time"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="115dp"
        android:background="@drawable/btn_category_not_pressed"
        android:layout_below="@+id/second_time"
        android:hint="18:00"
        android:textColor="@color/colorTextPrimary"
        android:textSize="17dp" />

    <Button
        android:id="@+id/seventh_time"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="205dp"
        android:background="@drawable/btn_category_not_pressed"
        android:layout_below="@+id/third_time"
        android:hint="19:00"
        android:textColor="@color/colorTextPrimary"
        android:textSize="17dp" />

    <Button
        android:id="@+id/btn_save_date"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/seventh_time"
        android:background="@drawable/btn_next_reg"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:text="Подтвердить"/>

</RelativeLayout>