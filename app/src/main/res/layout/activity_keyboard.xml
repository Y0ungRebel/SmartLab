<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Keyboard">

    <TextView
        android:id="@+id/skipPas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90px"
        android:layout_marginLeft="780px"
        android:text="Пропустить"
        android:textSize="16dp"
        android:textColor="#1A6FEE"
        android:onClick="onSkip"
        android:clickable="true"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Создайте пароль"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="100dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/infoPas"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginTop="20dp"
        android:textColor="#7E7E9A"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:gravity="center"
        android:onClick="onClick"
        android:text="Для защиты ваших персональных данных"/>

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="350dp"
        android:layout_height="115dp"
        android:layout_marginTop="70dp"
        android:layout_below="@id/infoPas"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/rb1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_btn"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="12dp"
            android:text="1"
            android:textSize="30dp" />

        <Button
            android:id="@+id/rb2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/round_btn"
            android:gravity="center"
            android:layout_margin="12dp"
            android:text="2"
            android:textSize="30dp" />

        <Button
            android:id="@+id/rb3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/round_btn"
            android:gravity="center"
            android:layout_margin="12dp"
            android:text="3"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="350dp"
        android:layout_height="115dp"
        android:layout_below="@id/line1"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/rb4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_btn"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="12dp"
            android:text="4"
            android:textSize="30dp" />

        <Button
            android:id="@+id/rb5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/round_btn"
            android:gravity="center"
            android:layout_margin="12dp"
            android:text="5"
            android:textSize="30dp" />

        <Button
            android:id="@+id/rb6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/round_btn"
            android:gravity="center"
            android:layout_margin="12dp"
            android:text="6"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line3"
        android:layout_width="350dp"
        android:layout_height="115dp"
        android:layout_below="@id/line2"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/rb7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_btn"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="12dp"
            android:text="7"
            android:textSize="30dp" />

        <Button
            android:id="@+id/rb8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/round_btn"
            android:gravity="center"
            android:layout_margin="12dp"
            android:text="8"
            android:textSize="30dp" />

        <Button
            android:id="@+id/rb9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/round_btn"
            android:gravity="center"
            android:layout_margin="12dp"
            android:text="9"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line4"
        android:layout_width="350dp"
        android:layout_height="115dp"
        android:layout_below="@id/line3"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/rb_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:gravity="center"
            android:text=""
            android:textSize="30dp" />
        <Button
            android:id="@+id/rb0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            android:background="@drawable/round_btn"
            android:gravity="center"
            android:text="0"
            android:textSize="30dp" />

        <ImageButton
            android:id="@+id/clear_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            android:background="#FDFCFC"
            android:gravity="center"
            android:src="@drawable/remove"
            android:text="3"
            android:textSize="30dp" />
    </LinearLayout>

</RelativeLayout>